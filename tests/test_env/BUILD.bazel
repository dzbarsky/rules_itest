load("@rules_go//go:def.bzl", "go_test")
load("@rules_itest//:itest.bzl", "itest_task", "service_test")
load("@rules_shell//shell:sh_binary.bzl", "sh_binary")

env = {
    "ITEST_ENV_VAR": "ITEST_ENV_VAR_VALUE",
    "ENV_RUNFILE": "$(rlocationpath :test.txt)",
}

go_test(
    name = "test_env_test",
    srcs = ["env_test.go"],
    data = [
        ":test.txt",
    ],
    env = env,
    tags = ["manual"],
    deps = [
        "@rules_go//go/runfiles",
    ],
)

service_test(
    name = "env_specified_in_base",
    test = ":test_env_test",
)

go_test(
    name = "_env_not_specified",
    srcs = ["env_test.go"],
    tags = ["manual"],
    deps = [
        "@rules_go//go/runfiles:go_default_library",
    ],
)

service_test(
    name = "env_specified_in_service_test",
    data = [
        ":test.txt",
    ],
    env = env,
    test = ":_env_not_specified",
)

cc_binary(
    name = "_task_cc",
    srcs = ["task.cc"],
    data = [
        ":test.txt",
    ],
    env = env,
)

itest_task(
    name = "task_cc",
    exe = ":_task_cc",
)

sh_binary(
    name = "_task_sh",
    srcs = ["task.sh"],
    data = [
        ":test.txt",
    ],
    env = env,
)

itest_task(
    name = "task_sh",
    exe = ":_task_sh",
    # sh_binary does not provide RunEnvironmentInfo.
    tags = ["manual"],
)
